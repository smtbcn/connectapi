{
    "name": "company/connectapi-php",
    "description": "Connect API - Doğtaş, Kelebek ve Lova api projesi",
    "type": "project",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Development Team",
            "email": "dev@company.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "files": [
            "config-only.php",
            "security-helper.php",
            "get-token.php",
            "helper-orders.php",
            "database-orders.php",
            "helper-shipments.php",
            "database-shipments.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 *.php",
        "cs-fix": "phpcbf --standard=PSR12 *.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}